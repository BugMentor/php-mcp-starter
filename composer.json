{
    "name": "bugmentor/php-mcp-starter",
    "description": "A barebones Model Context Protocol (MCP) Server written in PHP.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Mat√≠as J. Magni",
            "email": "matias.magni@bugmentor.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "BugMentor\\Mcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BugMentor\\Mcp\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "pestphp/pest": "^2.0"
    },
    "scripts": {
        "test": "pest",
        "test:unit": "pest --testsuite Unit",
        "test:integration": "pest --testsuite Integration",
        "test:e2e": "pest --testsuite E2E"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
